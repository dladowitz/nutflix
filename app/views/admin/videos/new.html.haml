%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: { multipart: true } do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset.span6{style: "width:500px"}
            = f.text_field :title, class: "span3"
            = f.select :category_id, options_for_select(Category.all.map{|category| [category.name, category.id]} )
            = f.text_area :description, class: "span6", rows: 8
            = f.file_field :small_cover, label: "Small Vertical Image"
            = f.file_field :large_cover, label: "Large Horizontal Image"
            = f.text_field :video_url, label: "Video URL"

            %fieldset.actions.form-group
              = f.submit "Add Video", class: "btn btn-default"
