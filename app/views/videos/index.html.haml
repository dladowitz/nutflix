-@categories.each do | category |
  %article{:class => "video_category #{category.name.downcase}"}
    %header
      %h3= link_to category.name
    .videos.row
      - category.videos.each do |video|
        .video.col-sm-2
          = link_to video, nil do
            %img(src="/tmp/#{video.small_cover_url}")

