-@categories.each do | category |
  %article{:class => "video_category #{category.name.downcase}"}
    %header
      %h3= link_to category.name, category_path(category)
    .videos.row
      - category.recent_videos.each do |video|
        .video.col-sm-2
          = link_to video, nil do
            - if video.small_cover_processing
              #small_cover_processing
                = image_tag "fallback/small_cover_processing.jpg"
            - else
              = image_tag video.small_cover.url, alt: "#{video.title}"
