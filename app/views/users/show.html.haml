%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email_address.downcase)}?s=40")
          %h2= "#{@user.full_name}'s video collections (#{@queue_items.count})"
          %button.btn.btn-default Follow
        %table.table#queue_items
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            = render partial: "queue_item", collection: @queue_items

%section.user_reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3= "#{@user.full_name}'s Reviews (#{@reviews.count})"
      %ul
        = render partial: "/videos/review", collection: @reviews
