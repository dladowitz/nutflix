%tr
  %td
    = hidden_field_tag "queue_items[][id]", queue_item.id
    = text_field_tag "queue_items[][queue_rank]", queue_item.queue_rank, class: "form-control", id: "rank: #{queue_item.queue_rank}"
  %td
    = link_to queue_item.video_title, queue_item.video
  %td
    = button_to "Play", nil, class: "btn btn-default"
  %td
    = select_tag "queue_items[][rating]", user_rating_template(queue_item.rating).html_safe, id: "rating-#{queue_item.queue_rank}"
    -#= select_tag "rating-#{queue_item.queue_rank}", user_rating_template(queue_item.rating).html_safe
  %td
    = link_to queue_item.category_name, queue_item.category
  %td
    = link_to "/queue_items/#{queue_item.id}", id: "remove-#{queue_item.queue_rank}", method: :delete do
      %i.glyphicon.glyphicon-remove
